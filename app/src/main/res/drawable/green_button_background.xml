<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Green color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
            <padding android:left="16dp" android:top="10dp" android:right="16dp" android:bottom="10dp" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" /> <!-- Light green when disabled -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- Darker green when pressed -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
