<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IbadatFragment">

    <!-- Include the common header -->
    <include
        layout="@layout/common_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- GridLayout for Ibadat items -->
    <GridLayout
        android:id="@+id/ibadat_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="2"
        android:rowCount="3">

        <!-- Assign unique IDs for each box item -->
        <include layout="@layout/box_item" android:id="@+id/box_item_1"/>
        <include layout="@layout/box_item" android:id="@+id/box_item_2"/>
        <include layout="@layout/box_item" android:id="@+id/box_item_3"/>
        <include layout="@layout/box_item" android:id="@+id/box_item_4"/>
        <include layout="@layout/box_item" android:id="@+id/box_item_5"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
