<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuranFragment">

    <!-- Include the common header -->
    <include
        layout="@layout/common_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- GridLayout for QuranFragment items -->
    <GridLayout
        android:id="@+id/quran_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="2"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_gravity="center">

        <!-- Add unique IDs for each included box item -->
        <include layout="@layout/box_item" android:id="@+id/box_al_quran" />
        <include layout="@layout/box_item" android:id="@+id/box_seerat_un_nabi" />
        <include layout="@layout/box_item" android:id="@+id/box_quran_15_lines" />
        <include layout="@layout/box_item" android:id="@+id/box_fahm_ul_quran" />
        <include layout="@layout/box_item" android:id="@+id/box_recitation" />
        <include layout="@layout/box_item" android:id="@+id/box_subjects" />
        <include layout="@layout/box_item" android:id="@+id/box_understand_quran" />
        <include layout="@layout/box_item" android:id="@+id/box_word_by_word_quran" />
        <include layout="@layout/box_item" android:id="@+id/box_shared_notes" />
        <include layout="@layout/box_item" android:id="@+id/box_free_quran_education" />
        <include layout="@layout/box_item" android:id="@+id/box_urdu_mutradifat" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
