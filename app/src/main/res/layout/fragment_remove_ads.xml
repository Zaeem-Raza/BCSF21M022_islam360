<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/greyish_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Become a Ads free User of Islam360"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold" />

        <!-- Image -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_ads_free_image"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/remove_ads_image" />

        <!-- Description Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tired of seeing ads while using our app? Upgrade to premium and enjoy an ad-free experience today!"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="16dp" />

        <!-- Best Offer Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Offer"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PKR 11,000"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-Years Pro"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="16dp" />

        <!-- Subscription Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Monthly Plan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat_regular" />

            <!-- Semi-Annually Plan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semi Annually"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat_regular" />

            <!-- Annually Plan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annually"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat_regular" />
        </LinearLayout>

        <!-- Subscribe Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/buttonPrimary"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="24dp" />

        <!-- Restore Purchase Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restore Purchase"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/buttonSecondary"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="8dp" />

        <!-- Terms and Conditions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By subscribing you also agreed to our Terms Of Use and Privacy Policy"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
