<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/greyish_black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/greyish_black">

        <!-- Number Background Circle -->
        <LinearLayout
            android:id="@+id/number_container"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:layout_alignParentStart="true">

            <!-- Number Text -->
            <TextView
                android:id="@+id/kitab_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_light"
                android:fontFamily="@font/montserrat_bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/kitab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="218dp"
            android:layout_toEndOf="@id/number_container"
            android:fontFamily="@font/al_qalam"
            android:text="کتاب وحی کے بیان میں"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kitab_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kitab_title"
            android:layout_toEndOf="@id/number_container"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="[1 - 7]"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/montserrat_regular" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
